<% provide(:title, t('forgotten_password')) %>

  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
      <h1 class="text-center"><%= t('forgotten_password') %></h1>
    </div>

    <div class="col-md-8 col-md-offset-2 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">

      <%= form_for :password_reset, url: password_resets_path, html: { class: 'form-horizontal' } do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit t('submit'), class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
