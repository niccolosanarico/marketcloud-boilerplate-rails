<!DOCTYPE html>
<html>
  <head>
    <title>Mcshop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name='title' content='<%= yield_meta_tag(:title) %>' />
    <meta name='description' content='<%= yield_meta_tag(:description) %>' />
    <meta name='keywords' content='<%= yield_meta_tag(:keywords) %>' />

    <meta name="turbolinks-cache-control" content="no-cache">

    <script src="https://js.braintreegateway.com/js/braintree-2.27.0.min.js"></script>

  </head>

  <body>


    <%= render 'layouts/header' %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-offset-1 col-sm-offset-1 breadcrumbs-section">
          <%= render_breadcrumbs %>
        </div>
      </div>

      <div class="row">
        <%= flash_messages %>
      </div>

      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
