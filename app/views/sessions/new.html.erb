<% provide(:title, t('sign_in')) %>

  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
      <h1 class="text-center"><%= t('sign_in') %></h1>
    </div>

    <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
      <h4 class="text-center"><%= link_to t('not_client'), signup_path %></h4>
    </div>

    <div class="col-md-8 col-md-offset-2 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10">

      <%= form_for :session, url: sessions_path, html: { class: 'form-horizontal' } do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, id: 'email', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= link_to t('forgot_password'), new_password_reset_path %>
          <%= f.password_field :password, id: 'password', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit t('sign_in'), class: "btn btn-primary", id: "signin" %>
        </div>

      <% end %>
    </div>
  </div>
